<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.watro.clickityclack.watro.Controller.SubmitPurityReportActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/buttonSubmitPurityReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Purity Report"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="426dp"
        android:layout_marginBottom="57dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/returnButton"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:layout_editor_absoluteY="33dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Enter Water Site Address"
        android:inputType="text"
        tools:layout_editor_absoluteY="103dp"
        tools:layout_editor_absoluteX="38dp"
        android:layout_above="@+id/editTextVirus"
        android:layout_alignLeft="@+id/editTextVirus"
        android:layout_alignStart="@+id/editTextVirus"
        android:layout_marginBottom="81dp" />

    <EditText
        android:id="@+id/editTextVirus"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Virus PPM"
        android:inputType="text"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="242dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editContaminant"
        android:layout_alignStart="@+id/editContaminant" />

    <EditText
        android:id="@+id/editContaminant"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Contaminant PPM"
        android:inputType="text|textPhonetic"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="330dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/editTextVirus"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinnerOverallCondition"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="191dp"
        android:layout_above="@+id/editTextVirus"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

</RelativeLayout>
